{
	"manifest_version": 2,
	"name": "Bilibili Danmu Helper",
	"version": "0.0.1",
	"background": { "scripts": ["jquery-2.2.4.js", "background.js"] },
	"page_action": {
		"default_icon": {
			"16": "BiliBH_16.png",
			"48": "BiliBH_48.png",
			"128": "BiliBH_128.png"
		},
		"default_title": "Bilibili Danmu Helper",
		"default_popup": "popup.html"
	},
	"permissions": ["tabs", "http://localhost/"],
	"content_scripts": [{
		"all_frames": true,
		"matches": ["http://www.bilibili.com/*"],
		"js": ["loadxmldoc.js", "jquery-2.2.4.js", "content_script.js"]
	}]
}
